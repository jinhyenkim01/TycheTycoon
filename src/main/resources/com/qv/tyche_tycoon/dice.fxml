<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/21"
            fx:controller="com.qv.tyche_tycoon.DiceController"
            prefHeight="600" prefWidth="1000">
    <top>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="주사위 게임" BorderPane.alignment="CENTER">
            <font>
                <Font name="BM JUA" size="48.0"/>
            </font>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </Text>
    </top>

    <left>
        <VBox fx:id="leftStatsBox" spacing="50" alignment="CENTER_LEFT"
              style="-fx-padding: 10; -fx-border-color: black; -fx-border-width: 2;"
              prefWidth="190" maxWidth="190">
            <BorderPane.margin>
                <Insets left="20.0" top="20.0" bottom="20.0"/>
            </BorderPane.margin>
            <Label fx:id="sumInfo" style="-fx-font-size: 16px;" textAlignment="LEFT"/>
            <Label fx:id="triesInfo" style="-fx-font-size: 16px;" textAlignment="LEFT"/>
            <Label fx:id="rewardInfo" style="-fx-font-size: 16px;" textAlignment="LEFT"/>
            <Label fx:id="lockInfo" style="-fx-font-size: 16px;" textAlignment="LEFT"/>
        </VBox>
    </left>

    <right>
        <VBox fx:id="rightStatsBox" spacing="50" alignment="CENTER_LEFT"
              style="-fx-padding: 10; -fx-border-color: black; -fx-border-width: 2;"
              prefWidth="190" maxWidth="190">
            <BorderPane.margin>
                <Insets right="20.0" top="20.0" bottom="20.0"/>
            </BorderPane.margin>
            <Label fx:id="moneyLabel" style="-fx-font-size: 16px;" textAlignment="LEFT"/>
            <Label fx:id="gamesPlayedLabel" style="-fx-font-size: 16px;" textAlignment="LEFT"/>
            <Label fx:id="probInfo" style="-fx-font-size: 16px;" textAlignment="LEFT"/>
        </VBox>
    </right>

    <bottom>
        <HBox alignment="CENTER" spacing="15">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <children>
                <Button fx:id="rollButton" onAction="#onRollDice" style="-fx-font-size: 28px;" text="주사위 굴리기">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
                <Button fx:id="exit" onAction="#onExit" style="-fx-font-size: 28px;" text="보상 받고 나가기">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
            </children>
        </HBox>
    </bottom>

    <center>
        <GridPane fx:id="diceGrid" alignment="CENTER" hgap="10" vgap="10" BorderPane.alignment="CENTER"/>
    </center>

</BorderPane>
