<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600"
            prefWidth="1000"
            xmlns="http://javafx.com/javafx/25"
            fx:controller="com.qv.tyche_tycoon.RacingHorseController">
    <top>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="경마 게임" BorderPane.alignment="CENTER">
            <font>
                <Font name="BM JUA" size="48.0"/>
            </font>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </Text>
    </top>

    <left>
        <VBox fx:id="leftStatsBox" alignment="CENTER_LEFT" maxWidth="190" prefWidth="190" spacing="50"
              style="-fx-padding: 10; -fx-border-color: black; -fx-border-width: 2;">
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" top="20.0"/>
            </BorderPane.margin>
            <Label fx:id="myHorseInfo" style="-fx-font-size: 16px;" textAlignment="LEFT"/>
            <Label fx:id="triesInfo" style="-fx-font-size: 16px;" textAlignment="LEFT"/>
            <Label fx:id="rewardInfo" style="-fx-font-size: 16px;" textAlignment="LEFT"/>
        </VBox>
    </left>

    <right>
        <VBox fx:id="rightStatsBox" alignment="CENTER_LEFT" maxWidth="190" prefWidth="190" spacing="50"
              style="-fx-padding: 10; -fx-border-color: black; -fx-border-width: 2;">
            <BorderPane.margin>
                <Insets bottom="20.0" right="20.0" top="20.0"/>
            </BorderPane.margin>
            <Label fx:id="moneyLabel" style="-fx-font-size: 16px;" textAlignment="LEFT"/>
            <Label fx:id="gamesPlayedLabel" style="-fx-font-size: 16px;" textAlignment="LEFT"/>
            <Label fx:id="probInfo" style="-fx-font-size: 16px;" textAlignment="LEFT"/>
        </VBox>
    </right>

    <bottom>
        <HBox alignment="CENTER" spacing="15">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <children>
                <Button fx:id="exit" onAction="#onExit" style="-fx-font-size: 28px;" text="보상 받고 나가기">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
            </children>
        </HBox>
    </bottom>

    <center>
        <StackPane BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>
            <TilePane fx:id="selectionPane" alignment="CENTER" hgap="15" vgap="15" visible="true"/>
            <GridPane fx:id="raceGrid" alignment="CENTER" hgap="20" vgap="15" visible="false"/>
        </StackPane>
    </center>
</BorderPane>